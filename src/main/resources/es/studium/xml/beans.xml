<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="mundo" class="es.studium.HelloSpring.Mundo">
		<!-- Aquí inyectaremos las dependencias -->
		<!--Y podemos hacerlo de dos formas, a través de las propiedades o a través 
			de los constructores -->
		<property name="mensaje" value="¡Hola Mundo!" />
		<constructor-arg name="mensaje" value="¡Hola Mundo!"></constructor-arg>
	</bean>

</beans>
